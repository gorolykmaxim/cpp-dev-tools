{
    "cdt_tasks": [
        {
            "name": "build",
            "command": "cmake --build build --target cpp-dev-tools"
        },
        {
            "name": "run",
            "command": "__restart",
            "pre_tasks": ["build"]
        },
        {
            "name": "build tests",
            "command": "cmake --build build --target cpp-dev-tools-test"
        },
        {
            "name": "run tests",
            "command": "./build/cpp-dev-tools-test",
            "pre_tasks": ["build tests"]
        }
    ]
}