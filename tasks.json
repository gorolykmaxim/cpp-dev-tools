{
    "cdt_tasks": [
        {
            "name": "build",
            "command": "cmake --build build --target cpp-dev-tools"
        },
        {
            "name": "run",
            "command": "__restart",
            "pre_tasks": ["build"]
        },
        {
            "name": "delete executable",
            "command": "rm -f ./build/cpp-dev-tools"
        },
        {
            "name": "fail to run",
            "command": "__restart",
            "pre_tasks": ["build", "delete executable"]
        }
    ]
}